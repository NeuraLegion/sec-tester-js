{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "newLine": "LF",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2020"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "typings"],
    "paths": {
      "@sectester/bus": ["packages/bus/src/index.ts"],
      "@sectester/core": ["packages/core/src/index.ts"],
      "@sectester/repeater": ["packages/repeater/src/index.ts"],
      "@sectester/reporter": ["packages/reporter/src/index.ts"],
      "@sectester/runner": ["packages/runner/src/index.ts"],
      "@sectester/scan": ["packages/scan/src/index.ts"],
      "workspace-plugin": ["tools/workspace-plugin/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
